    <script>
        // Google Analytics 4 - √Ä configurer avec votre ID
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'GA_MEASUREMENT_ID'); // √Ä remplacer

        // Fonction de tracking des conversions
        function trackConversion(eventName, value) {
            gtag('event', eventName, {
                'event_category': 'conversion',
                'event_label': 'audio_library',
                'value': value
            });
        }

        // Tracking automatique des interactions
        document.addEventListener('DOMContentLoaded', function() {
            // Track lecture audio
            const iframe = document.querySelector('.player-iframe');
            if (iframe) {
                iframe.addEventListener('click', function() {
                    gtag('event', 'audio_interaction', {
                        'event_category': 'engagement',
                        'event_label': 'lieu_ressource_play'
                    });
                });
            }

            // Track scroll depth
            let maxScroll = 0;
            window.addEventListener('scroll', function() {
                const scrollPercent = Math.round((window.scrollY / (document.body.scrollHeight - window.innerHeight)) * 100);
                if (scrollPercent > maxScroll && scrollPercent % 25 === 0) {
                    maxScroll = scrollPercent;
                    gtag('event', 'scroll_depth', {
                        'event_category': 'engagement',
                        'event_label': scrollPercent + '%'
                    });
                }
            });

            // Track time on page
            let startTime = Date.now();
            window.addEventListener('beforeunload', function() {
                const timeOnPage = Math.round((Date.now() - startTime) / 1000);
                gtag('event', 'time_on_page', {
                    'event_category': 'engagement',
                    'event_label': 'audio_library',
                    'value': timeOnPage
                });
            });
        });
    </script>
